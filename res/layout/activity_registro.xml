<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="8"
    tools:context="com.example.diccperso.Registro" >

    <Spinner
        android:id="@+id/spinner_idiomas"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignRight="@+id/Space8" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Space10"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <Spinner
        android:id="@+id/spinner_idiomas2"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_alignRight="@+id/spinner_idiomas"
        android:layout_below="@+id/cameraButton"
        android:layout_marginTop="55dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner_idiomas2"
        android:layout_alignRight="@+id/editText1"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cameraButton"
        android:layout_alignLeft="@+id/spinner_idiomas2"
        android:onClick="reverso"
        android:src="@drawable/reverso" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="Ok" />
    
    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="89dp"
        android:layout_height="93dp"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="71dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
         android:onClick="camera"
        android:src="@drawable/camera" />

    <ImageButton
        android:id="@+id/play_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:onClick="play"
       android:src="@android:drawable/stat_sys_headset" />

    <ImageButton
        android:id="@+id/recordOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cameraButton"
        android:layout_alignTop="@+id/recordOn"
        android:layout_marginLeft="18dp"
        android:onClick="stop_recording"
        android:src="@android:drawable/presence_audio_busy" />

    <ImageButton
        android:id="@+id/recordOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spinner_idiomas"
        android:layout_below="@+id/spinner_idiomas"
        android:layout_marginTop="18dp"
        android:onClick="start_recording"
        android:src="@android:drawable/presence_audio_online" />

</RelativeLayout>
